<viewdata model="FubuTodo.Web.Endpoints.Todo.ViewModels.Update" />

<form action="update" method="post">
  <label for="Name">Todo Name</label>
  <input name="Name" type="text" value="${Model.Name}" />
    
  <label for="IsComplete">Is Complete</label>
  <input name="IsComplete" type="checkbox" value="${Model.IsComplete}" />

  <input hidden="hidden" name="Id" value="${Model.Id}" />

  <input name="Submit" type="Submit" />
</form>